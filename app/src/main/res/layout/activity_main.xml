<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/content"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="100dp"
        android:layout_width="match_parent">

        <LinearLayout
            android:id="@+id/line_humidity"
            android:layout_width="200dp"
            android:layout_height="40dp">
            <TextView
                android:id="@+id/label_humidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Humidity"/>

            <EditText
                android:id="@+id/humidity"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:digits="0123456789."/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/line_dirt"
            android:layout_below="@+id/line_humidity"
            android:layout_width="200dp"
            android:layout_height="40dp">
            <TextView
                android:id="@+id/label_dirt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dirt"/>

            <EditText
                android:id="@+id/dirt"
                android:layout_width="100dp"
                android:layout_marginStart="34dp"
                android:layout_height="wrap_content"
                android:digits="0123456789."
                android:inputType="numberDecimal" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/line_oilseed"
            android:layout_below="@+id/line_dirt"
            android:layout_width="200dp"
            android:layout_height="200dp">
            <TextView
                android:id="@+id/label_oilseed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Oilseed"/>

            <EditText
                android:id="@+id/oilseed"
                android:layout_width="100dp"
                android:layout_marginStart="9dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:digits="0123456789."/>
        </LinearLayout>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>